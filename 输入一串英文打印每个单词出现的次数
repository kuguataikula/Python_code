words = "Keep on going and never give up. Believe in yourself. Actions speak louder than words."

words = words.replace(".","").lower()

words = words.split()


wordscount = {}

for word in words:
    if word in wordscount.keys():
        wordscount[word] += 1
    else:
        wordscount[word] = 1
    print("{} ------------ {}æ¬¡".format(word,wordscount[word]))
